
<h2>Register</h2>
<%= form_for User.new do |f| %>
  <fieldset>
  <br>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>
  <br>
  <%= f.label :age %>
  <%= f.text_field :age %>
  <br>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <br>
  <%= f.label :avatar %>
  <%= f.url_field :avatar %>
  <br>
  <%= f.submit 'Register'%>
</fieldset>
<%end%>

