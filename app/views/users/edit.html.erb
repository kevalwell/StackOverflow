<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name  %>

  <%= f.label :email %>
  <%= f.text_field :email  %>

  <%= f.label :password %>
  <%= f.text_field :password  %>

  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation  %>

  <%= f.label :age %>
  <%= f.text_field :age  %>

  <%= f.label :location %>
  <%= f.text_field :location  %>

  <%= f.label :avatar %>
  <%= f.text_field :avatar  %>

  <%= f.submit %>
<% end %>